<?xml version="1.0" encoding="UTF-8"?>
<project name="module_gaceta" default="compile.module.gaceta">
  <dirname property="module.gaceta.basedir" file="${ant.file.module_gaceta}"/>
  
  <property name="module.jdk.home.gaceta" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.gaceta" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.gaceta" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.gaceta" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="gaceta.output.dir" value="${module.gaceta.basedir}/out/production/gaceta"/>
  <property name="gaceta.testoutput.dir" value="${module.gaceta.basedir}/out/test/gaceta"/>
  
  <path id="gaceta.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="gaceta.module.production.classpath">
    <path refid="${module.jdk.classpath.gaceta}"/>
    <pathelement location="${basedir}/../../Projects/freeling_src/APIs/java/freeling.jar"/>
    <pathelement location="${basedir}/../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_60.jdk/Contents/Home/lib/postgresql-9.4.1208.jre6.jar"/>
  </path>
  
  <path id="gaceta.runtime.production.module.classpath">
    <pathelement location="${gaceta.output.dir}"/>
    <pathelement location="${basedir}/../../Projects/freeling_src/APIs/java/freeling.jar"/>
    <pathelement location="${basedir}/../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_60.jdk/Contents/Home/lib/postgresql-9.4.1208.jre6.jar"/>
  </path>
  
  <path id="gaceta.module.classpath">
    <path refid="${module.jdk.classpath.gaceta}"/>
    <pathelement location="${gaceta.output.dir}"/>
    <pathelement location="${basedir}/../../Projects/freeling_src/APIs/java/freeling.jar"/>
    <pathelement location="${basedir}/../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_60.jdk/Contents/Home/lib/postgresql-9.4.1208.jre6.jar"/>
  </path>
  
  <path id="gaceta.runtime.module.classpath">
    <pathelement location="${gaceta.testoutput.dir}"/>
    <pathelement location="${gaceta.output.dir}"/>
    <pathelement location="${basedir}/../../Projects/freeling_src/APIs/java/freeling.jar"/>
    <pathelement location="${basedir}/../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_60.jdk/Contents/Home/lib/postgresql-9.4.1208.jre6.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.gaceta">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.gaceta">
    <patternset refid="excluded.from.module.gaceta"/>
  </patternset>
  
  <path id="gaceta.module.sourcepath">
    <dirset dir="${module.gaceta.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.gaceta" depends="compile.module.gaceta.production,compile.module.gaceta.tests" description="Compile module gaceta"/>
  
  <target name="compile.module.gaceta.production" description="Compile module gaceta; production classes">
    <mkdir dir="${gaceta.output.dir}"/>
    <javac destdir="${gaceta.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.gaceta}/javac">
      <compilerarg line="${compiler.args.gaceta}"/>
      <bootclasspath refid="gaceta.module.bootclasspath"/>
      <classpath refid="gaceta.module.production.classpath"/>
      <src refid="gaceta.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.gaceta"/>
    </javac>
    
    <copy todir="${gaceta.output.dir}">
      <fileset dir="${module.gaceta.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.gaceta.tests" depends="compile.module.gaceta.production" description="compile module gaceta; test classes" unless="skip.tests"/>
  
  <target name="clean.module.gaceta" description="cleanup module">
    <delete dir="${gaceta.output.dir}"/>
    <delete dir="${gaceta.testoutput.dir}"/>
  </target>
</project>